{
  "name": "corporate-governance-platform",
  "version": "1.0.0",
  "description": "Blockchain-based corporate governance platform with confidential shareholder voting",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify:sepolia": "hardhat run scripts/verify.js --network sepolia",
    "verify:mainnet": "hardhat run scripts/verify.js --network mainnet",
    "interact": "hardhat run scripts/interact.js",
    "simulate": "hardhat run scripts/simulate.js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js": "eslint 'test/**/*.js' 'scripts/**/*.js'",
    "lint:js:fix": "eslint 'test/**/*.js' 'scripts/**/*.js' --fix",
    "lint": "npm run lint:sol && npm run lint:js",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "format:check": "prettier --check 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "security:check": "slither . --detect all",
    "security:audit": "hardhat run scripts/security-audit.js",
    "gas:benchmark": "hardhat run scripts/gas-benchmark.js",
    "analyze": "npm run lint && npm run security:audit && npm run gas:benchmark",
    "prepare": "husky install && hardhat compile",
    "prepush": "npm run lint && npm test"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "governance",
    "voting",
    "solidity",
    "hardhat"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "eslint": "^8.55.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0"
  }
}
