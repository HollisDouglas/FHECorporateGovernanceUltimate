# ========================================
# Network Configuration
# ========================================

# Sepolia Testnet RPC URL
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Ethereum Mainnet RPC URL (Alchemy, Infura, or other provider)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Alternative RPC providers (optional)
# SEPOLIA_RPC_URL_BACKUP=https://sepolia.infura.io/v3/YOUR_API_KEY
# MAINNET_RPC_URL_BACKUP=https://mainnet.infura.io/v3/YOUR_API_KEY

# ========================================
# Deployment Configuration
# ========================================

# Private key for deployment wallet
# WARNING: NEVER commit your actual private key!
# Use environment-specific .env files (.env.local, .env.production)
PRIVATE_KEY=your_private_key_here

# Deployer address (derived from private key)
# DEPLOYER_ADDRESS=

# ========================================
# Contract Verification
# ========================================

# Etherscan API Key for contract verification
# Get your API key from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ========================================
# Gas Reporting & Optimization
# ========================================

# Enable gas reporting in tests
# Set to "true" to see gas usage for each transaction
REPORT_GAS=false

# CoinMarketCap API Key for USD price conversion
# Get your API key from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Gas price settings (in gwei)
# GAS_PRICE=auto
# MAX_FEE_PER_GAS=50
# MAX_PRIORITY_FEE_PER_GAS=2

# ========================================
# Deployment Tracking
# ========================================

# Deployed contract addresses (filled after deployment)
CONTRACT_ADDRESS=
PROXY_ADDRESS=
IMPLEMENTATION_ADDRESS=

# Deployment network
DEPLOYMENT_NETWORK=

# Deployment timestamp
DEPLOYMENT_TIMESTAMP=

# ========================================
# Access Control & Security
# ========================================

# Pauser role addresses (comma-separated)
# Users who can pause/unpause contract operations
PAUSER_ADDRESSES=

# Emergency admin address
EMERGENCY_ADMIN_ADDRESS=

# Multi-sig wallet address (if using)
MULTISIG_ADDRESS=

# Time-lock delay (in seconds)
TIMELOCK_DELAY=172800

# ========================================
# Governance Configuration
# ========================================

# Company name for initial setup
COMPANY_NAME=Corporate Governance Platform

# Total shares for initial setup
TOTAL_SHARES=1000000

# Initial board member addresses (comma-separated)
INITIAL_BOARD_MEMBERS=

# Voting period (in days)
DEFAULT_VOTING_PERIOD=7

# Quorum threshold (percentage)
QUORUM_THRESHOLD=50

# ========================================
# Testing Configuration
# ========================================

# Enable verbose test output
VERBOSE_TESTS=false

# Test network fork (for mainnet fork testing)
# FORK_MAINNET=false
# FORK_BLOCK_NUMBER=

# Coverage threshold (percentage)
COVERAGE_THRESHOLD=90

# ========================================
# CI/CD Configuration
# ========================================

# Codecov token for coverage reporting
CODECOV_TOKEN=

# GitHub Actions environment
# CI=true
# GITHUB_TOKEN=

# ========================================
# Development Tools
# ========================================

# Enable Hardhat console logs
DEBUG=false

# Hardhat network chain ID
# HARDHAT_CHAIN_ID=31337

# Enable contract size checking
CHECK_CONTRACT_SIZE=true

# Maximum contract size (in bytes)
MAX_CONTRACT_SIZE=24576

# ========================================
# Security & Monitoring
# ========================================

# Enable security checks
ENABLE_SECURITY_CHECKS=true

# Slither severity threshold (high, medium, low, informational)
SLITHER_SEVERITY_THRESHOLD=high

# Enable automatic security audits in CI
AUTO_SECURITY_AUDIT=true

# DoS protection settings
MAX_LOOP_ITERATIONS=100
MAX_ARRAY_SIZE=1000

# ========================================
# Performance Optimization
# ========================================

# Optimizer runs (balance between deployment and runtime costs)
# Lower values (200) = cheaper deployment, higher runtime costs
# Higher values (1000+) = more expensive deployment, lower runtime costs
OPTIMIZER_RUNS=200

# Enable via-IR compilation (experimental)
# Can improve optimization but increases compilation time
ENABLE_VIA_IR=false

# Enable Yul optimizer
ENABLE_YUL_OPTIMIZER=true

# ========================================
# Frontend Configuration (if applicable)
# ========================================

# Frontend RPC endpoint
REACT_APP_RPC_URL=

# Contract ABI path
REACT_APP_CONTRACT_ABI_PATH=./artifacts/contracts/CorporateGovernanceUltimate.sol/CorporateGovernanceUltimate.json

# Enable frontend development mode
# REACT_APP_DEV_MODE=true

# ========================================
# Backup & Recovery
# ========================================

# Backup directory
BACKUP_DIR=./backups

# Enable automatic backups
AUTO_BACKUP=true

# Backup retention (in days)
BACKUP_RETENTION_DAYS=30

# ========================================
# Logging & Monitoring
# ========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable transaction logging
ENABLE_TX_LOGGING=true

# Log output file
LOG_FILE=./logs/app.log

# ========================================
# External Services (Optional)
# ========================================

# Tenderly API key (for debugging and monitoring)
# TENDERLY_PROJECT=
# TENDERLY_USERNAME=
# TENDERLY_API_KEY=

# Defender API keys (OpenZeppelin Defender)
# DEFENDER_API_KEY=
# DEFENDER_API_SECRET=

# Alchemy webhook ID (for event monitoring)
# ALCHEMY_WEBHOOK_ID=

# ========================================
# Notes
# ========================================
#
# 1. Create a .env file by copying this template:
#    cp .env.example .env
#
# 2. Fill in your actual values in .env file
#
# 3. NEVER commit .env file to version control
#
# 4. Use different .env files for different environments:
#    .env.local     - Local development
#    .env.staging   - Staging environment
#    .env.production - Production environment
#
# 5. Rotate secrets regularly (at least annually)
#
# 6. Use hardware wallets for mainnet deployments
#
# 7. Test thoroughly on testnet before mainnet deployment
#
